# Copy this file to `.env` and fill in values.

# Best public catalog: Space-Track (GP/TLE). Space-Track recommends at most 1 download/hour.
SPACE_TRACK_USER=
SPACE_TRACK_PASSWORD=
SPACE_TRACK_SYNC_HOURS=1

# Fallback public catalog (metadata + optional TLE fallback)
CELESTRAK_GROUP=active
CATALOG_SYNC_HOURS=24

# Screening + confidence tuning
SCREENING_HORIZON_DAYS=14
SCREENING_VOLUME_KM=10.0
TIME_CRITICAL_HOURS=72
RISK_HIGH_SCORE=0.7
RISK_WATCH_SCORE=0.4
RISK_HIGH_MISS_KM=1.0
RISK_WATCH_MISS_KM=5.0
TLE_MAX_AGE_HOURS_FOR_CONFIDENCE=72

# Retention defaults
ORBIT_STATE_RETENTION_DAYS=30
TLE_RECORD_RETENTION_DAYS=90

# Optional: Cesium Ion for higher-quality basemaps/terrain + optional night lights layer
CESIUM_ION_TOKEN=
CESIUM_NIGHT_ASSET_ID=

# Auth (simple session-based gating for business-only features)
SESSION_SECRET=
BUSINESS_ACCESS_CODE=

# Runtime environment: development or production
APP_ENV=development

# Session/cookie hardening
# In production, set SESSION_HTTPS_ONLY=true and use HTTPS end-to-end.
SESSION_HTTPS_ONLY=
SESSION_SAME_SITE=lax
SESSION_MAX_AGE_SECONDS=28800

# Trusted host protection (comma-separated hostnames)
TRUSTED_HOSTS=localhost,127.0.0.1,testserver
TRUSTED_HOSTS_ALLOW_ALL=false

# If behind a reverse proxy/load balancer, enable forwarded header trust.
TRUST_PROXY_HEADERS=false

# Browser same-origin protection for state-changing requests
ENFORCE_ORIGIN_CHECK=true
# Optional extra allowed origins (comma-separated), e.g. https://orbitrisk.net
ALLOWED_ORIGINS=

# Login brute-force guardrail
LOGIN_RATE_LIMIT_ATTEMPTS=8
LOGIN_RATE_LIMIT_WINDOW_SECONDS=300

# Webhook egress policy
WEBHOOK_ALLOWED_SCHEMES=https
WEBHOOK_ALLOW_PRIVATE_TARGETS=false
WEBHOOK_ALLOW_HTTP_LOCALHOST=true
