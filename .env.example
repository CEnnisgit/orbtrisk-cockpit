# Copy this file to `.env` and fill in values.

# Best public catalog: Space-Track (GP/TLE). Space-Track recommends at most 1 download/hour.
SPACE_TRACK_USER=
SPACE_TRACK_PASSWORD=
SPACE_TRACK_SYNC_HOURS=1

# Fallback public catalog (metadata + optional TLE fallback)
CELESTRAK_GROUP=active
CATALOG_SYNC_HOURS=24

# Screening + confidence tuning
SCREENING_HORIZON_DAYS=14
SCREENING_VOLUME_KM=10.0
TIME_CRITICAL_HOURS=72
RISK_HIGH_SCORE=0.7
RISK_WATCH_SCORE=0.4
RISK_HIGH_MISS_KM=1.0
RISK_WATCH_MISS_KM=5.0
TLE_MAX_AGE_HOURS_FOR_CONFIDENCE=72

# Retention defaults
ORBIT_STATE_RETENTION_DAYS=30
TLE_RECORD_RETENTION_DAYS=90

# Optional: Cesium Ion for higher-quality basemaps/terrain + optional night lights layer
CESIUM_ION_TOKEN=
CESIUM_NIGHT_ASSET_ID=

# Auth (simple session-based gating for business-only features)
SESSION_SECRET=
BUSINESS_ACCESS_CODE=
